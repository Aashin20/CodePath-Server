{
    "manifest_version": 2,
    "name": "CodePath",
    "version": "1.0",
    "description": "Intelligent Roadmaps in just one click",
    "permissions": [
      "activeTab",
      "http://*/*",
      "https://*/*"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "CodePath"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }